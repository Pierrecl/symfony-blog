{% extends 'base.html.twig' %}
{% block body %}
  {% block main %}
  <div class="container">
      <h3 class="center">Ajout d'un article</h3>

      {{ form_start(form) }}
      <div class="col s6">
          {{ form_row(form.title) }}
      </div>
      <div class="col s6">
          {{ form_row(form.author) }}
      </div>
      <div class="col s6">
          {{ form_row(form.slug) }}
      </div>
      <div class="row">
      <div class="col s12">
          {{ form_row(form.content) }}
      </div>
    </div>
    <div class="row">
      <div class="col s6">
          {{ form_row(form.publishedAt) }}
      </div>
    </div>
    <div class="row">
      <div class="col s6">
          {{ form_row(form.category) }}
      </div>
      </div>
      <div class="row">
          <div class="col s6">
            {{ form_row(form.tags) }}
          </div>
      </div>
      <div class="row">
        <div class="col s6">
            <input type="submit" value="create" class="btn btn-primary" />
        </div>
      </div>
      {{ form_end(form) }}
  </div>
  {% endblock %}
  {{ tinymce_init() }}
{% endblock %}
